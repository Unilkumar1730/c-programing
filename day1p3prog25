#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    char arr[100];
    scanf("%s",arr);
    int a,b,c,d,e;
    scanf("%d %d %d %d %d ",&a,&b,&c,&d,&e);
    printf("Name of the Student:%s\n",arr);
    printf("Total marks:%d\n",a+b+c+d+e);
    float A=(a+b+c+d+e)/5.0;
    printf("Average marks:%.1f\n",A);
    

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
