#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    float a,b,c;    
    scanf("%f %f %f",&a,&b,&c);
    if(a>b && a>c){
printf("Number1 is maximum with value of %.1f\n",a);
        }
    else if(b>a && b>c)
    {
        printf("Number2 is maximum with value of %.1f\n",b);
    }  
    else if (c>=a && c>=b)
    {
        printf("Number3 is maximum with value of %.1f\n",c);
    }
 
    return 0;
}
