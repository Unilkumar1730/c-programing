#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#define pi 3.141

int main() {
    int side1,l,w,r,b1,side2,b2;
    scanf("%d %d %d %d %d %d %d ",&side1,&l,&w,&r,&b1,&side2,&b2);
    printf("Perimeter of Square:%d\n",4*side1);
    printf("Perimeter of Rectangle:%d\n",2*(l+w) );
    float c=2*pi*r;
    printf("Perimeter of Circle:%.2f\n",c);
    printf("Perimeter of Triangle:%d\n",b1+side2+b2);


    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}

